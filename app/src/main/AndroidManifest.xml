<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thegroup.calculator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasicCalculatorActivity" android:label="Basic Calculator"></activity>
        <activity android:name=".NetworkMain" android:label="Network Calculator"></activity>
        <activity android:name=".NetworkSecond" android:label="Network Calculator"></activity>
        <activity android:name=".AboutUs" android:label="About Us"></activity>
        <activity android:name=".FinancialCalculator" android:label="Financial Calculator"></activity>

    </application>

</manifest>
