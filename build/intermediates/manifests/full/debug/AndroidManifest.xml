<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thegroup.calculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="thegroup.calculator.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="thegroup.calculator.BasicCalculatorActivity"
            android:label="Basic Calculator" />
        <activity
            android:name="thegroup.calculator.NetworkMain"
            android:label="Network Calculator" />
        <activity
            android:name="thegroup.calculator.NetworkSecond"
            android:label="Network Calculator" />
        <activity
            android:name="thegroup.calculator.AboutUs"
            android:label="About Us" />
        <activity
            android:name="thegroup.calculator.FinancialCalculator"
            android:label="Financial Calculator" />
    </application>

</manifest>